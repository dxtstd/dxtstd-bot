{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowJs": false,
    "checkJs": false,
    "strict": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": ["es2020", "esnext.array", "DOM"]
  },
  "include": ["index.ts", "src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "assets", "database", "tmp"]
}
